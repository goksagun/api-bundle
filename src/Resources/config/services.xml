<?xml version="1.0" encoding="UTF-8" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services
        https://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="api.listener.string_to_json_transform_listener" class="Goksagun\ApiBundle\EventListener\StringToJsonTransformListener">
            <tag name="kernel.event_listener" event="kernel.controller" method="onKernelController"/>
        </service>
        <service id="api.listener.validation_listener" class="Goksagun\ApiBundle\EventListener\ValidationListener">
            <tag name="kernel.event_listener" event="kernel.controller" method="onKernelController"/>
            <argument type="service" id="service_container"/>
            <argument type="service" id="annotations.reader"/>
            <argument type="string">annotation</argument>
        </service>
        <service id="api.listener.exception_listener" class="Goksagun\ApiBundle\EventListener\ExceptionListener">
            <tag name="kernel.event_listener" event="kernel.exception" method="onKernelException"/>
        </service>
        <service id="api.listener.trashed_listener" class="Goksagun\ApiBundle\EventListener\TrashedListener">
            <tag name="doctrine.event_listener" event="preFlush" method="preFlush"/>
        </service>
    </services>
</container>
